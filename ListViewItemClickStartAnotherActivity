ListView companiesList = (ListView) findViewById(R.id.companylistView);
companiesList.setOnItemClickListener(new AdapterView.OnItemClickListener() {
    @Override
    public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
      // Display the detailed view
      // Pass the position
      //Open another Activity

      Company company = companies.get(position);
      Log.d("Company Details", company.toString());

      Intent details = new Intent(getApplicationContext(), CompanyDetails.class);
      details.putExtra("name", company.getCompany());
      details.putExtra("rank", company.getRank());
      details.putExtra("year", company.getYear());
      details.putExtra("revenue", company.getRevenue());
      details.putExtra("profit", company.getProfit());
      
      startActivity(details);
    }
});
